{
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"lib": [ "ESNext" ],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"strictNullChecks": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*.ts"
	]
}
